{
    "tool_name": "ClassifyLidar",
    "exe": "classify_lidar",
    "short_description": "Classify points within a LiDAR point cloud based on point properties.",
    "toolbox": "LiDAR Tools",
    "license": "Proprietary",
    "example": ">> .*EXE_NAME -r=ClassifyLidar -i=input.las -o=output.las --radius=2.0 --grd_threshold=0.2 --oto_threshold=1.0 --planarity_threshold=0.6 --linearity_threshold=0.5 --iterations=50 --facade_threshold=0.75",
    "parameters": [
        {
            "name": "Input LiDAR Points",
            "flags": ["-i", "--input"],
            "description": "Name of the input LiDAR points.",
            "parameter_type": {"ExistingFile":"Lidar"},
            "default_value": null,
            "optional": true
        },
        {
            "name": "Output LiDAR Points",
            "flags": ["-o", "--output"],
            "description": "Name of the output LiDAR points.",
            "parameter_type": {"NewFile":"Lidar"},
            "default_value": null,
            "optional": true
        },
        {
            "name": "Search Distance:",
            "flags": ["--radius"],
            "description": "Search distance used in neighbourhood search (metres).",
            "parameter_type": "Float",
            "default_value": "1.5",
            "optional": true
        },
        {
            "name": "Ground Threshold:",
            "flags": ["--grd_threshold"],
            "description": "Ground threshold (metres).",
            "parameter_type": "Float",
            "default_value": "0.1",
            "optional": true
        },
        {
            "name": "Off-Terrain Object Threshold:",
            "flags": ["--oto_threshold"],
            "description": "Off-terrain object threshold (metres).",
            "parameter_type": "Float",
            "default_value": "2.0",
            "optional": true
        },
        {
            "name": "Planarity Threshold:",
            "flags": ["--planarity_threshold"],
            "description": "Planarity threshold (0-1).",
            "parameter_type": "Float",
            "default_value": "0.85",
            "optional": true
        },
        {
            "name": "Linearity Threshold:",
            "flags": ["--linearity_threshold"],
            "description": "Linearity threshold (0-1).",
            "parameter_type": "Float",
            "default_value": "0.70",
            "optional": true
        },
        {
            "name": "Number of Iterations:",
            "flags": ["--iterations"],
            "description": "Number of iterations.",
            "parameter_type": "Integer",
            "default_value": "30",
            "optional": true
        },
        {
            "name": "Facade Threshold:",
            "flags": ["--facade_threshold"],
            "description": "Facade threshold (metres).",
            "parameter_type": "Float",
            "default_value": "0.5",
            "optional": true
        }
    ]
}
